{
  "manifest_version": 3,
  "name": "Website Time Blocking",
  "version": "1.0",
  "description": "Control your website usage with blocking types.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
     "16": "icons/icon16.png",
     "48": "icons/icon48.png",
     "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "website-time-blocking@example.com",
      "data_collection_permissions": {
          "required": ["none"],
          "optional": []
      }
    }
  }
}
